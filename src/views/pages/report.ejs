<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Document</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/css/bootstrap.min.css"
            rel="stylesheet"
            integrity="sha384-4Q6Gf2aSP4eDXB8Miphtr37CMZZQ5oXLH2yaXMJ2w8e2ZtHTl7GptT4jmndRuHDT"
            crossorigin="anonymous"
        />
    </head>
    <body>
        <div class="container">
            <header><%- include('../partials/header', {userId}); %></header>
            <div class="container row gx-5">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <div class="card-header bg-body-secondary">
                            <h5 id="reportFormTitle" class="mb-0">Create report</h5>
                        </div>
                        <form id="myForm" class="card-body">
                            <label for="title" class="form-label">Title:</label>
                            <input
                                type="text"
                                class="form-control"
                                id="title"
                                name="title"
                            />

                            <label for="type" class="form-label">Type:</label>
                            <input
                                type="text"
                                class="form-control"
                                id="type"
                                name="type"
                            />

                            <label for="report_date" class="form-label"
                                >Report Date:</label
                            >
                            <input
                                class="form-control"
                                type="date"
                                id="report_date"
                                name="report_date"
                            /><br />

                            <input
                                type="submit"
                                value="Submit"
                                id="createButton"
                                class="btn btn-outline-primary "
                            />
                            <input
                                type="submit"
                                value="Edit"
                                id="editButton"
                                class="btn btn-outline-success d-none"
                            />
                            <button type="button" id="calcelEditButton" onclick="endEditMode()" class="btn btn-outline-danger d-none">Cancel edit</button>
                        </form>
                    </div>
                </div>

                <div class="col-md-8">
                    <div class="card shadow-sm">
                        <div class="card-header bg-secondary text-white">
                            <h5 class="mb-0">Reports for user: <%= userId %></h5>
                        </div>
                        <div class="card-body">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th scope="col" style="width:6%">#</th>
                                        <th scope="col" style="width:20%">Title</th>
                                        <th scope="col" style="width:20%">Type</th>
                                        <th scope="col" style="width:20%">Date</th>
                                        <th scope="col" style="width:30%"></th>
                                    </tr>
                                </thead>
                                <tbody id="reportDataContainer">
                                    <% reports.forEach((element, index) => { %>
                                        <%- include('../partials/reportItem', {index, userId, ...element}); %>
                                    <% }); %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>

    <script src="/js/index.js"></script>
    <script
        src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.6/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-j1CDi7MgGQ12Z7Qab0qlWQ/Qqz24Gc6BM0thvEMVjHnfYGF0rmFCozFSxQBxwHKO"
        crossorigin="anonymous"
    ></script>
</html>
